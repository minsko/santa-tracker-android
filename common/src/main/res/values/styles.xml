<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="BigVerbText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">60sp</item>
        <item name="android:shadowColor">#44000000</item>
        <item name="android:lineSpacingMultiplier">0.7</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:textAppearance">@style/TextAppearance.Santa.Lobster</item>
    </style>

    <style name="BigVerbText.Rotated" parent="BigVerbText">
        <item name="android:rotation">-10</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Santa.Lobster" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/lobster</item>
    </style>

    <style name="ThemeOverlay.Purple" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorAccent">@color/purple_button</item>
    </style>

    <style name="GameUI.PurpleButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Just a placeholder. Real implementation in :tracker module. -->
    <style name="Theme.Tracker" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- Just a placeholder. Real implementation in :presentquest module. -->
    <style name="AppTheme.PresentQuest" parent="Theme.AppCompat.Light" />
    <style name="AppTheme.PresentQuest.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" />
    <style name="EasyPermissions" parent="Theme.AppCompat.DayNight.DarkActionBar" />
    <style name="EasyPermissions.Transparent" />

    <style name="Santa.ImageButton.Mute" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/btn_speaker_mute</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>
