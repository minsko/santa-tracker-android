<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/watch_face_background"
        android:layout_width="@dimen/settings_preview_size"
        android:layout_height="@dimen/settings_preview_size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/right_complication_background"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/solid_circle_bg"
        app:layout_constraintBottom_toBottomOf="@+id/watch_face_background"
        app:layout_constraintEnd_toEndOf="@+id/watch_face_background"
        app:layout_constraintTop_toTopOf="@+id/watch_face_background"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/right_complication"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/right_complication_background"
        app:layout_constraintEnd_toEndOf="@+id/right_complication_background"
        app:layout_constraintStart_toStartOf="@+id/right_complication_background"
        app:layout_constraintTop_toTopOf="@+id/right_complication_background"
        android:contentDescription="@string/desc_right_complication_config" />


    <ImageView
        android:id="@+id/lower_complication_background"
        style="?android:borderlessButtonStyle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/watch_face_background"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/solid_circle_bg"
        app:layout_constraintBottom_toBottomOf="@+id/watch_face_background"
        app:layout_constraintEnd_toEndOf="@+id/watch_face_background"
        app:layout_constraintStart_toStartOf="@+id/watch_face_background"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/lower_complication"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/lower_complication_background"
        app:layout_constraintEnd_toEndOf="@+id/lower_complication_background"
        app:layout_constraintStart_toStartOf="@+id/lower_complication_background"
        app:layout_constraintTop_toTopOf="@+id/lower_complication_background"
        android:contentDescription="@string/desc_lower_complication_config" />

    <ImageView
        android:id="@+id/left_complication_background"
        style="?android:borderlessButtonStyle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/watch_face_background"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/solid_circle_bg"
        app:layout_constraintBottom_toBottomOf="@+id/watch_face_background"
        app:layout_constraintStart_toStartOf="@+id/watch_face_background"
        app:layout_constraintTop_toTopOf="@+id/watch_face_background"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/left_complication"
        style="?android:borderlessButtonStyle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/watch_face_background"
        android:layout_alignTop="@+id/left_complication_background"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/left_complication_background"
        app:layout_constraintEnd_toEndOf="@+id/left_complication_background"
        app:layout_constraintStart_toStartOf="@+id/left_complication_background"
        app:layout_constraintTop_toTopOf="@+id/left_complication_background"
        android:contentDescription="@string/desc_left_complication_config" />

</androidx.constraintlayout.widget.ConstraintLayout>
